# Server
PORT=3001
LOG_LEVEL=info
RUST_LOG=xwallet_backend=debug,tower_http=debug

# Database
DATABASE_URL=postgres://postgres:password@localhost:5432/xwallet

# Redis
REDIS_URL=redis://127.0.0.1:6379

# Twitter API Credentials
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_BEARER_TOKEN=your_bearer_token
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret

# Sui Network
SUI_RPC_URL=https://fullnode.testnet.sui.io:443
XWALLET_PACKAGE_ID=0x...
XWALLET_REGISTRY_ID=0x...
ENCLAVE_CONFIG_ID=0x...
ENCLAVE_ID=0x... # Enclave shared object from register_enclave (NOT the config id)

# Nautilus Enclave
ENCLAVE_URL=http://localhost:3000

# Gas sponsorship (Enoki)
ENOKI_API_KEY=your_enoki_api_key
ENOKI_NETWORK=testnet

# Backend signer (base64-encoded BCS SuiKeyPair)
BACKEND_SIGNER_PRIVATE_KEY=base64_bcs_keypair_here

# Indexer
INDEXER_POLL_INTERVAL_MS=5000
INDEXER_BATCH_SIZE=50
# ENABLE_INDEXER=false  # Set to true to run indexer in API server (not recommended for production)

# Bot handles - comma-separated list of valid Twitter handles (without @)
# Only tweets mentioning these handles will be processed
BOT_HANDLES=NautilusXWalletautilusxwallet

# Frontend URL (for reply messages)
FRONTEND_URL=http://localhost:5173

# Poller API key (for authenticating twitter-poller service)
POLLER_API_KEY=your_secure_api_key_here

# Sponsor dApp transactions (true = Enoki pays gas, false = user pays gas)
IS_SPONSOR_ENABLED=true