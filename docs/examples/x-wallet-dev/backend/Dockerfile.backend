FROM rust:1.85-bookworm AS builder

WORKDIR /app

# Copy Cargo files first for dependency caching
COPY Cargo.toml ./

# Create dummy src to build dependencies
RUN mkdir src && echo "fn main() {}" > src/main.rs && echo "" > src/lib.rs
RUN mkdir -p src/bin && echo "fn main() {}" > src/bin/indexer.rs

# Build dependencies only (this layer will be cached)
RUN cargo build --release || true
RUN rm -rf src target/release/deps/xwallet* target/release/libxwallet* target/release/.fingerprint/xwallet*

# Copy actual source code
COPY src ./src
COPY migrations ./migrations

# Build the actual binary
RUN cargo build --release --bin xwallet-backend

# Runtime stage
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/xwallet-backend /app/xwallet-backend
COPY migrations ./migrations

EXPOSE 3000

ENTRYPOINT ["./xwallet-backend"]
