# ============================================================================
# API Provider Selection
# ============================================================================
# Choose between "official" (Twitter API v2) or "twitterapi" (twitterapi.io)
TWITTER_API_PROVIDER=official

# ============================================================================
# Official Twitter API v2 Credentials
# Required when TWITTER_API_PROVIDER=official
# ============================================================================
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ============================================================================
# TwitterAPI.io Credentials  
# Required when TWITTER_API_PROVIDER=twitterapi
# ============================================================================
TWITTERAPI_IO_KEY=your_twitterapi_io_key_here

# ============================================================================
# Backend Configuration
# ============================================================================
BACKEND_URL=http://localhost:3001
# API key to authenticate with backend's /webhook/poller endpoint
POLLER_API_KEY=your_secure_api_key_here

# ============================================================================
# Polling Configuration
# ============================================================================
POLL_INTERVAL_SECONDS=15
TWITTER_MENTION=@Nautiluswallet
